<Window x:Class="PRACTICA_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRACTICA_5"
        mc:Ignorable="d"
        Title="Main" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Login:" Grid.Row="0" Margin="0,10,0,57" Grid.RowSpan="2"/>
        <TextBox Name="txtLogin" Grid.Row="0" Margin="5,10,5,5" FontSize="14" />
        <Label Content="Password:" Grid.Row="1" />
        <PasswordBox Name="txtPassword" Grid.Row="1" Margin="5,5,5,10" FontSize="14" />
        <Button x:Name="btnLogIn" Content="Log in" Grid.Row="2" Click="btnLogIn_Click" Margin="5,16,5,17" />
        <Label Name="lblErrorMessage" Content="" Grid.Row="3" Foreground="Red" Margin="5" />
    </Grid>
</Window>
